<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textStyle="bold"
        android:textSize="19sp"
        android:id="@+id/textView_pictorial_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
       	 />

    <TextView
        android:textSize="15sp"
        android:id="@+id/textView_pictorial_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_pictorial_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        fresco:placeholderImage="@mipmap/ic_launcher"
        android:id="@+id/image_pictorial_content"
        android:layout_below="@+id/textView_pictorial_subtitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="270dp"
        android:layout_height="270dp" />

</RelativeLayout>
